---
interface Props {
    title: string
    excerpt: string
    featuredImage: string
    date: string
    slug: string
}
const {title, excerpt, featuredImage, date, slug} = Astro.props;
---

<article class="max-w-2xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
    <img src={featuredImage} alt={title} class="w-full h-48 object-cover" />
    <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">{title}</h2>
        <p class="text-gray-600 text-sm mb-4">{date}</p>
        <p class="text-gray-700 mb-4">{excerpt}</p>
        <a href={`/posts/${slug}`} class="text-blue-500 hover:underline">Leer m√°s</a>
    </div>
</article>