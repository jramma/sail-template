---
import Layout from "../layouts/Layout.astro";
import { WordPressAPI } from "../lib/wp";
const { title, content } = await WordPressAPI.getPageInfo("pagina-de-inicio");
---

<Layout>
  <section class="max-w-4xl mx-auto py-8 px-4">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <div class="prose prose-lg" set:html={content} />
  </section>
</Layout>
